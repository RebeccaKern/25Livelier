<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Andrew ID</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.andrew_id %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class=>"btn waves-effect waves-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="paginate">
  <%= will_paginate @users, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next", :param_name => 'users' %>
</span>

<%= link_to 'New User', new_user_path %>
