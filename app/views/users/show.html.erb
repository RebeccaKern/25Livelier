<style type="text/css">
img {
  width: 30%;
    display:block;
    margin:auto;
}
</style>

<p id="notice"><%= notice %></p>

<img src="https://pikmail.herokuapp.com/<%= @user.email %>?size=100" class="circle responsive-img" alt="Profile Picture">

<h2 class="center-text"><%= @user.name %></h2>
<h4 class="center-text"><i>AndrewID: <%= @user.andrew_id %></i></h4>
<p class="center-text">
  <strong>Role:</strong>
  <%= @user.role %>
</p>
<div class="center-text"><%= link_to 'Edit', edit_user_path(@user), :class=>"btn waves-effect waves-light accent-color-bg" %></div>


<% if @organizations.empty? %>
  <h5>You don't have admin privileges for any current organizations.</h5>
<% else %>

<h3>Organizations You Lead</h3>

  <table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |org| %>
      <tr>
        <td><%= link_to org.name, org %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<% end %>


<% if @upcoming_events.empty? %>
  <h5>You don't have any upcoming events at the moment.</h5>
<% else %>
<h3>Upcoming Events</h3>

  <table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%m/%d/%y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.organization.name %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>

</table>


  
<% if @past_events.empty? == false %>
  <h3>Past Events</h3>

  <table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%m/%d/%y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.organization.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
