<style>
body {
    position: relative;    
}

body::after {
    content: '';
    position: absolute;
    top:0;
    width: 100vw;
    height: 100%;
    left:50%;
    transform:translateX(-50%);
    background-image: url(<%= asset_path 'class.png' %>);
    background-size: cover !important;
    background-repeat: no-repeat;
    z-index: -100;
    opacity: 0.2
}

body, html {
    height: 100%;
}

.row {
  padding-top: 30% !important;
}

</style>

<div>
  <div class="row">  
    <h1 class="center-text">Let's Make CMU <span class="accent-color">Livelier</span></h1>  
      <div class="center-text">
        <% if !(logged_in?) %>
        <!-- <div class="card-content"> -->
          <h5><b>Imagine a world where it is actually possible to reserve a space.</b></h5>
          <p>Log In or Sign Up below to join the movement</p>
        </div>
      <!-- </div> -->
      <div class="center-text">
        <a class="waves-effect waves-accent waves-light btn accent-color-bg" href="/login">Log In</a>
        <a class="waves-effect waves-default waves-light btn primary-color-bg" href="/signup">Register</a>        
      </div>
      <% else %>
      <div class="center-text">
        <a class="waves-effect waves-accent waves-light btn accent-color-bg" href="/events/new">Make an Event</a>
        <a class="waves-effect waves-default waves-light btn primary-color-bg" href="/users/<%= current_user.id %>">View Your Events</a>        
      </div>      
      <% end %>
    </div>
  </div>
</div>
