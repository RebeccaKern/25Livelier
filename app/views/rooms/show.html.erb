<p id="notice"><%= notice %></p>

<p>
  <strong>Building:</strong>
  <%= link_to @room.building.name, @room.building %>
</p>

<p>
  <strong>Room:</strong>
  <%= @room.full_name %>
</p>

<p>
  <strong>Max capacity:</strong>
  <%= @room.max_capacity %>
</p>

<p>
  <strong>Type:</strong>
  <%= @room.room_type %>
</p>

<h3>Upcoming Events</h3>

  <table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%m/%d/%y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.organization.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <h3>Past Events</h3>

  <table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%m/%d/%y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.organization.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>


<%= link_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
