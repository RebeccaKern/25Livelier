<p id="notice"><%= notice %></p>

<h1><%=@room.full_name%></h1>

<p>
  <strong>Building:</strong>
  <%= link_to @room.building.name, @room.building %>
</p>

<p>
  <strong>Max capacity:</strong>
  <%= @room.max_capacity %>
</p>

<p>
  <strong>Type:</strong>
  <%= @room.room_type %>
</p>


<% if @upcoming_events.empty? %>
  <h5>This room does not have any upcoming events at the moment.</h5>
<% else %>
<h3>Upcoming Events</h3>

  <table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%m/%d/%y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.organization.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if @past_events.empty? %>
  <h5>This room has never been used for an event.</h5>
<% else %>
  <h3>Past Events</h3>

  <table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.date.strftime("%m/%d/%y") %></td>
        <td><%= event.start_time.strftime("%I:%M %p") %></td>
        <td><%= event.end_time.strftime("%I:%M %p") %></td>
        <td><%= event.organization.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%end%>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<%= link_to 'Edit', edit_room_path(@room), :class=>"btn waves-effect waves-light" %>

<%= link_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn waves-effect waves-light red" %>
