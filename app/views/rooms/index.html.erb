<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room Name</th>
      <th>Max capacity</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.full_name, room %></td>
        <td><%= room.max_capacity %></td>
        <td><%= room.room_type %></td>
        <td><%= link_to 'Edit', edit_room_path(room), :class=>"btn waves-effect waves-light" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
